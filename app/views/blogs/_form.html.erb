<%= simple_form_for @blog do |f| %>
  <div>
    <%= f.label :Create_blog_posts %>
  </div>
  <div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title%>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category_id, @categories.collect {|p| [ p.category_name, p.id ] }%>
    </div>
    <div class="form-group">
      <%= f.label :DateTime_Public %>
      <%= f.datetime_field :public_time%>
    </div>
  </div>
  <div class="form-group">
    <%= f.input :content, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
  </div>
  <div>
    <div class="form-group">
      <%= f.label :Setting_editor %>
    </div>
    <div class="form-group">
      <%= f.label :creator_name %>
      <%= f.text_field :creator_name%>
    </div>
    <div class="form-group">
      <%= f.label :creator_postion %>
      <%= f.text_field :creator_postion%>
    </div>
    <div class="form-group">
      <%= f.label :creator_old %>
      <%= f.text_field :creator_old %>
    </div>
    <div class="form-group">
      <%= f.submit "Xac nhan" %>
    </div>
  </div>
<% end %>
